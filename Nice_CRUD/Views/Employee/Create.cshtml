            {
                @foreach (var country in ViewBag.Countries)
                {
                    <option value="@country.Id">@country.Name</option>
                }
            }
            else
            {
                <!-- Handle the case when ViewBag.Countries is null -->
                <option value="">No countries available</option>
            }
        </select>
